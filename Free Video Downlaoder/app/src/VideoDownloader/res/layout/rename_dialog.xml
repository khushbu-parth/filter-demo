<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/text_10"
    android:background="@drawable/boarder_com"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/text_5">

    <LinearLayout
        android:id="@+id/upper_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_dia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical|center_horizontal|center"
            android:layout_margin="10dp"
            android:text="Rename"
            android:fontFamily="@font/app_font3"
            android:textColor="@color/purple_500"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical|center_horizontal|center"
            android:layout_margin="10dp"
            android:fontFamily="@font/app_font3"
            android:text="Please enter name for the Item :"
            android:textColor="@color/purple_500"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/ren_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical|center_horizontal|center"
            android:layout_margin="10dp"
            android:fontFamily="@font/app_font3"
            android:hint="Enter File name"
            android:textColor="@color/purple_500"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/value_10"
        android:gravity="right">

        <TextView
            android:id="@+id/ren_cancel"
            android:layout_width="@dimen/_80dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle_shape"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ren_ok"
            android:layout_width="80dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle_shape1"
            android:gravity="center"
            android:text="Ok"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>
