<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activitys.TvGuideActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/guide1"
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:src="@drawable/guide_1" />

            <ImageView
                android:id="@+id/guide2"
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:src="@drawable/guide_2" />

            <ImageView
                android:id="@+id/guide3"
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:src="@drawable/guide_3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/guide4"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:src="@drawable/guide_4" />

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/guide5"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:src="@drawable/guide_5" />

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/guide6"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:src="@drawable/guide_6" />

        </LinearLayout>
    </LinearLayout>
    





</LinearLayout>